float opSmoothIntersection(float d1, float d2, float k) {
    float h = clamp(0.5 - 0.5 * (d2 - d1) / k, 0.0, 1.0);
    return lerp(d2, d1, h) + k * h * (1.0 - h);
}


float2 DE(float3 p)
{
   // float d = hartverdrahtet(p);
   // float d2 = length(p) - u_paramD.x;


    //return  opSmoothIntersection(d, d2, 0.1);
    return MBOX(p);
}

float3 estimateNormal(in float3 pos)
{
    float e = _Threshold/2;
    float3 eps = float3(e, 0.0, 0.0);

    return normalize(float3(
        DE(pos + eps.xyy).x - DE(pos - eps.xyy).x,
        DE(pos + eps.yxy).x - DE(pos - eps.yxy).x,
        DE(pos + eps.yyx).x - DE(pos - eps.yyx).x));
}

float3 getNormal(in float3 p)
{

    float2 e = float2(thresh(p), -thresh(p));
    return normalize(
        e.xyy * DE(p + e.xyy).x +
        e.yyx * DE(p + e.yyx).x +
        e.yxy * DE(p + e.yxy).x +
        e.xxx * DE(p + e.xxx).x);
}

