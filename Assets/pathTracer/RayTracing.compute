        z = rotateY(z, u_paramC.y);
        z = rotateZ(z, u_paramC.z);
        z = z * Scale - Offset * (Scale - 1.0);
        n++; 
        dd = min(dd, sdBox(z, u_paramD.xyz));
    }

    /* if (sDist < fDist)
